@model WLVSTools.Logger.Web.ViewModels.Home.HomeViewModel

<h1>Exception Logs</h1>

@if (Model != null)
{
    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th class="col-xs-12 col-md-3">Log Date</th>
                <th class="col-xs-12 col-md-3">Url</th>
                <th class="col-xs-12 col-md-6">Exception Messages</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var log in Model.Logs)
            {
                <tr>
                    <td>@log.LogDate</td>
                    <td>@log.ExceptionUrl</td>
                    <td>@log.ExceptionMessage</td>
                </tr>
            }
        </tbody>
    </table>
}